<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:background="@drawable/light"
    android:gravity="left"
    android:weightSum="1">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/icon"
        android:id="@+id/imageView2" />

    <TextView
        android:id="@+id/textView6"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Project"
        android:textColor="#ee1b1a1a"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginBottom="10dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/tl1"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true">

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/tl2"

        android:layout_below="@+id/tl1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Create Project"
        android:background="#292323"
        android:textColor="#ffffff"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/in_date"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Name:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_above="@+id/titleField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/titleField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Project Name"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_alignBottom="@+id/tl2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_above="@+id/descField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/descField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="Enter here"
        android:inputType="textMultiLine"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/in_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Choose Date"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="SELECT DATE"
        android:background="@drawable/date_icon"
        android:layout_alignTop="@+id/in_date"
        android:layout_alignRight="@+id/submitBtn"
        android:layout_alignEnd="@+id/submitBtn"
        android:layout_toEndOf="@+id/in_date"
        android:layout_toRightOf="@+id/in_date" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting Date:"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/descField"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageSelect"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/add_image" />



</RelativeLayout>